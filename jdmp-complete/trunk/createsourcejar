DIR="/home/arndt/workspace/jdmp-complete"
VERSION="0.1.1"
PACKAGES="jdmp-core jdmp-gui jdmp-bsh jdmp-ehcache jdmp-jetty jdmp-jgroups jdmp-liblinear jdmp-libsvm jdmp-lucene jdmp-mallet jdmp-stanfordpos jdmp-weka"

cd $DIR
rm -rf target
mkdir -p target

for p in $PACKAGES
do
  cp ../$p/target/$p-$VERSION-sources.jar target/$p-$VERSION-sources.zip
done

cd target

for p in $PACKAGES
do
  unzip -o $p-$VERSION-sources.zip
done

rm -rf *.zip

zip -r jdmp-complete-$VERSION-sources.jar *
